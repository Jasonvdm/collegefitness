<%= simple_form_for(@workout) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :avatar %>
  <%= f.input :workout_type, :collection => ["Cardio", "Strength", "Cross training"] %>
  <%= f.input :difficulty, :collection => ["Beginner", "Intermediate", "Advanced"] %>
  <%= f.input :has_equipment, :label => "Is equipment required?", input_html: { id: "equipment_needed" }  %>
  <%= f.input :equipment_list, :label => "What equipment is necessary?", :collection => workout_equipment, wrapper_html: { id: "equipment_list" }  %>
  <%= f.input :description %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
