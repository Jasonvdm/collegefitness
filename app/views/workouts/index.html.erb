<div class="row">
	<div class="span24">
		<h1 style="float:left; margin-right: 25px;">Listing Workouts</h1>
		<% if current_user.is_admin %>
		<%= link_to 'New Workout', new_workout_path, class: "btn btn-primary", style: "float:left"%>
		<% end %>
	</div>
</div>

<%= form_tag(params, :method => :get) do %>
	<div class="field">
		Sort By Difficulty: <%= select("post", "difficulty", difficulty_levels, {:include_blank => "All"}) %>
	</div>
	<div>
		Sort By Workout Type: <%= select("post", "workout_type", workout_types, {:include_blank => "All"}) %>
	</div>
	<div class="actions"><%= submit_tag "Search",  :class => "btn" %></div>
<% end %>


<% @workouts.each do |workout| %>
	<%= render partial: "workout_card", locals: {workout: workout} %>
<% end %>

<br />


