<div class="header"><%= @workout.name %></div>
<div class="row">
	<div class="span10 offset7">
		<div text/align="center"><%= image_tag @workout.avatar.url(:large), style: "width:100%" %></div>
	</div>
</div>
<div class="row">
	<div class="span10 offset7">
		<div class="square" style="margin-top:0px">
			<div class="row">
				<div class="span3">
					Gear: 
				</div>
				<div class="span5">	
					<% if @workout.has_equipment %>
						<div><%= @workout.equipment_list %></div>
					<% else %>
						<div>None required </div>
					<% end %>
				</div>
			</div>
			<div class="row">
				<div class="span3">
					Type: 
				</div>
				<div class="span5">
					<div><%= @workout.workout_type %></div>
				</div>
			</div>
			<div class="row">
				<div class="span3">
				 Difficulty: 
				</div>
				<div class="span5">
					<div><%= @workout.difficulty %></div>
				</div>
			</div>
			<div class="row">
				<div class="span3">
					Description: 
				</div>
				<div class="span5">
					<div><%= @workout.description %></div>
				</div>
			</div>
			<% if current_user.is_admin %>
			<div class="t-center">
				<%= link_to 'Edit', edit_workout_path(@workout), class: "btn btn-primary btn-edit" %> 
			</div>
			<% end %>
		</div>
	</div>
</div>

